{
  "Hjem/Nix Mine Module": {
    "prefix": "aspects",
    "body": [
    "{...}:",
    "{flake.aspects.${1:aspects} = {",
    "nixos =",
      "{",
      "  config,",
      "  lib,",
      "  pkgs,",
      "  ...",
      "}:",
      "let",
      "  inherit (lib) mkOption types mkIf;",
      "  cfg = config.${2:CHANGEME};",
      "in",
      "{",
      "  options.$2 = {",
      "    enable = mkOption {",
      "      type = types.bool;",
      "      default = false;",
      "      description = \"Enable $2.\";",
      "    };",
      "",
      "    package = mkOption {",
      "      type = types.package;",
      "      default = pkgs.${3:pkg}\;",
      "      description = \"The $3 package to install.\";",
      "    };",
      "  };",
      "",
      "  config = mkIf cfg.enable {",
      "  };",
      "};",
      "};",
      "}",
    ],
    "description": "Nix Module Options"
  }
}
